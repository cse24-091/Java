<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="hellofx.Controller"
            prefWidth="400" prefHeight="300">

    <children>
        <Label text="Username:" layoutX="50" layoutY="80" />
        <TextField fx:id="usernameField" layoutX="150" layoutY="75" prefWidth="200" />

        <Label text="Password:" layoutX="50" layoutY="130" />
        <PasswordField fx:id="passwordField" layoutX="150" layoutY="125" prefWidth="200" />

        <Button text="Login" layoutX="150" layoutY="180" prefWidth="200"
                onAction="#handleLogin" />
    </children>
</AnchorPane>
