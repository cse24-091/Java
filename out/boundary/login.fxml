<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="boundary.LoginView"
      alignment="CENTER" spacing="10" style="-fx-padding: 20;">
    <Label text="Banking System Login" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    <TextField fx:id="usernameField" promptText="Username"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <Button text="Login" onAction="#handleLogin" style="-fx-background-color: #2196f3; -fx-text-fill: white;"/>
</VBox>
