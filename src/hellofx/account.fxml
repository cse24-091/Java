<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="hellofx.AccountView"
      spacing="15" alignment="CENTER" style="-fx-padding:20;">
    <Label text="Welcome to Your Account" style="-fx-font-size:18px;"/>
    <Label fx:id="balanceLabel" text="Balance: $" style="-fx-font-size:14px;"/>
    <Button text="Deposit" onAction="#handleDeposit"/>
    <Button text="Withdraw" onAction="#handleWithdraw"/>
</VBox>
