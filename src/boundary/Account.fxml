<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
      fx:controller="boundary.AccountView" alignment="CENTER" spacing="12"
      style="-fx-padding: 20;">
      
    <Label text="Account Details" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <Label fx:id="nameLabel" style="-fx-font-size: 14px;"/>
    <Label fx:id="accountNumberLabel" style="-fx-font-size: 14px;"/>
    <Label fx:id="accountTypeLabel" style="-fx-font-size: 14px;"/>
    <Label fx:id="balanceLabel" style="-fx-font-size: 14px; -fx-text-fill: green;"/>

    <Button text="Logout" onAction="#handleLogout" style="-fx-padding: 6 16;"/>
</VBox>
